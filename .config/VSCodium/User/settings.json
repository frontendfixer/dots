{
  "window.menuBarVisibility": "toggle",
  "files.exclude": {
    "**/node_modules": true
  },
  "workbench.editorAssociations": {
    "*.svg": "svgPreview.previewEditor"
  },

  "material-icon-theme.activeIconPack": "react_redux",
  "material-icon-theme.files.color": "#f1fa8c",
  "material-icon-theme.folders.color": "#8be9fd",
  "workbench.colorTheme": "Dracula Dark+",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.wrapTabs": true,
  "workbench.preferredDarkColorTheme": "Dracula Dark+",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "statusBar.background": "#0e1316",
    "statusBar.foreground": "#f9f9ff",
    "statusBar.border": "#15181b",
    "statusBarItem.errorBackground": "#ff5e5e",
    "statusBarItem.errorForeground": "#212128",
    "statusBarItem.warningBackground": "#ff5e5e",
    "statusBarItem.warningForeground": "#212128",
    "statusBarItem.activeBackground": "#5fff87",
    "statusBarItem.hoverBackground": "#2c8ad6"
  },

  //! ================ Editor Settings ===============
  "editor.fontFamily": "'Hack Nerd Font','Cascadia Code', 'FiraCode Nerd Font'",
  "editor.fontSize": 16,
  "editor.fontWeight": "300",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.foldingStrategy": "indentation",
  "editor.guides.bracketPairs": "active",
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "none",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": true,
  "explorer.autoReveal": true,
  "editor.suggest.preview": true,
  "editor.rename.enablePreview": false,
  "editor.wordBasedSuggestionsMode": "allDocuments",

  //! ================ Ignores ==================
  "html.hover.references": false,
  "css.hover.references": false,
  "html.hover.documentation": false,
  "css.hover.documentation": false,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  //! =================== Emmet ===============
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "html": "html",
    "css": "css",
    "plaintext": "pug",
    // "javascript": "javascriptreact",
    // "typescript": "typescriptreact"
    "javascript": "javascript",
    "typescript": "typescript"
  },
  "emmet.preferences": {
    "css.color.short": true
  },
  "emmet.excludeLanguages": [],
  "emmet.triggerExpansionOnTab": true,

  //! =================== Prettier ===============
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": true,
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.extensionOnImport": false,
  "path-intellisense.mappings": {
    "/": "${workspaceFolder}"
  },

  //! ============ Language Settings ===============
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "on",
      "strings": "on"
    }
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2"
  },

  // ! ================ cSpell =============
  "cSpell.userWords": [
    "firestore",
    "fontawesome",
    "fortawesome",
    "frontendfixer",
    "imageurl",
    "Lakshmikanta",
    "Patra",
    "tailwindcss"
  ],

  // ! =========== terminal =============
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "300",

  // ! ==================================
  "debug.console.acceptSuggestionOnEnter": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "better-comments.highlightPlainText": true,
  "color-highlight.matchWords": true,
  "github.gitProtocol": "ssh",
  "tailwindCSS.emmetCompletions": true,
  "workbench.iconTheme": "material-icon-theme",
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "git.autofetch": true
}
