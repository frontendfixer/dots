{
  "window.menuBarVisibility": "toggle",
  "workbench.editorAssociations": {
    "*.svg": "svgPreview.previewEditor"
  },
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "react_redux",
  "material-icon-theme.files.color": "#f1fa8c",
  "material-icon-theme.folders.color": "#8be9fd",
  "workbench.colorTheme": "Dracula Dark+",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.wrapTabs": true,
  "workbench.preferredDarkColorTheme": "Dracula Dark+",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "statusBar.background": "#0e1316",
    "statusBar.foreground": "#f9f9ff",
    "statusBar.border": "#15181b",
    "statusBarItem.errorBackground": "#ff5e5e",
    "statusBarItem.errorForeground": "#212128",
    "statusBarItem.warningBackground": "#ff5e5e",
    "statusBarItem.warningForeground": "#212128",
    "statusBarItem.activeBackground": "#5fff87",
    "statusBarItem.hoverBackground": "#2c8ad6"
  },

  //! ================ Editor Settings ===============
  "editor.fontFamily": "'Cascadia Code', 'FiraCode Nerd Font'",
  "editor.fontSize": 16,
  "editor.fontWeight": "300",
  "editor.lineHeight": 24,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.foldingStrategy": "indentation",
  "editor.guides.bracketPairs": "active",
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "none",
  "explorer.confirmDelete": true,
  "explorer.autoReveal": true,
  "editor.suggest.preview": true,
  "editor.rename.enablePreview": false,
  "editor.wordBasedSuggestionsMode": "allDocuments",
  "explorer.decorations.badges": false,

  //! ================ Ignores ==================
  "html.hover.references": false,
  "css.hover.references": false,
  "html.hover.documentation": false,
  "css.hover.documentation": false,

  //! =================== Emmet ===============
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "html": "html",
    "css": "css",
    "plaintext": "pug",
    // "javascript": "javascriptreact",
    // "typescript": "typescriptreact"
    "javascript": "javascript",
    "typescript": "typescript"
  },
  "emmet.preferences": {
    "css.color.short": true
  },
  "emmet.excludeLanguages": [],
  "emmet.triggerExpansionOnTab": true,

  //! =================== Prettier ===============
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": true,
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.extensionOnImport": false,
  "path-intellisense.mappings": {
    "/": "${workspaceFolder}"
  },

  //! =================== Code-Action ===============
  "editor.formatOnSave": true,
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fiXAll.stylelint": "explicit"
  },

  //! ============ Language Settings ===============
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "on",
      "strings": "on"
    }
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,

  // ! ================ cSpell =============
  "cSpell.userWords": [
    "aadhaar",
    "bootstarp",
    "clsx",
    "datatable",
    "daterangepicker",
    "firestore",
    "fontawesome",
    "fortawesome",
    "frontendfixer",
    "hookform",
    "imageurl",
    "Lakshmikanta",
    "NEXTAUTH",
    "nextui",
    "Patra",
    "signin",
    "signup",
    "stylelint",
    "stylelintrc",
    "stylexjs",
    "Swal",
    "tailwindcss",
    "toastify",
    "WBSCSGS"
  ],

  // ! =========== terminal =============
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "300",

  // ! ==================================
  "debug.console.acceptSuggestionOnEnter": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "better-comments.highlightPlainText": true,
  "color-highlight.matchWords": true,
  "github.gitProtocol": "ssh",
  "tailwindCSS.emmetCompletions": true,
  "git.autofetch": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "git.ignoreRebaseWarning": true,
  "editor.linkedEditing": true,
  "files.exclude": {
    ".next": true,
    "node_modules": true
  }
}
